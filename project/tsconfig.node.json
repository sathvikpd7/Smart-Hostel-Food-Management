{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": ".",
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": [
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}